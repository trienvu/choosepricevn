<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vic" >

    <TextView
        android:id="@+id/textView1"
        style="@style/style_more_app_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/victory_tv_congratulation_height"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/victory_tv_play_margin_left_right"
        android:layout_marginRight="@dimen/victory_tv_play_margin_left_right"
        android:layout_marginTop="30dp"
        android:background="@drawable/congratulation_frame"
        android:gravity="center"
        android:text="@string/victory"
        android:textSize="30sp" />

    <TextView
        style="@style/style_more_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/vic_info"
        android:textColor="#2E2EFE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvBack"
        style="@style/style_tv_continues"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/winscreen_tv_continues_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:text="@string/close" />

</RelativeLayout>