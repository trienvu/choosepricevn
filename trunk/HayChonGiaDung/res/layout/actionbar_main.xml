<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/actionbar_border"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/actionbar_iv_back_width_height"
        android:layout_height="@dimen/actionbar_iv_back_width_height"
        android:layout_marginLeft="@dimen/actionbar_iv_back_margin_left_right"
        android:layout_marginRight="@dimen/actionbar_iv_back_margin_left_right"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingLeft="@dimen/actionbar_iv_back_padding_left"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/actionbar_iv_back_padding_top"
        android:src="@drawable/btn_home" />

    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="@dimen/actionbar_iv_help_width_height"
        android:layout_height="@dimen/actionbar_iv_help_width_height"
        android:layout_marginLeft="@dimen/actionbar_iv_help_margin_left"
        android:layout_marginRight="@dimen/actionbar_iv_help_margin_right"
        android:background="@drawable/btn_share"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingLeft="@dimen/actionbar_iv_back_padding_left"
        android:paddingRight="0dp" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="@dimen/actionbar_tv_level_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/actionbar_iv_help_margin_left"
        android:layout_marginRight="@dimen/actionbar_iv_help_margin_right"
        android:gravity="center"
        android:background="#37FE00"
        android:textColor="#ff0000ff"
        android:text="@string/actionbar_tv_number"
        android:textSize="@dimen/actionbar_tv_level_textsize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgHelp"
        android:layout_width="@dimen/actionbar_iv_help_width_height"
        android:layout_height="@dimen/actionbar_iv_help_width_height"
        android:layout_marginLeft="@dimen/actionbar_iv_help_margin_left"
        android:layout_marginRight="@dimen/actionbar_iv_help_margin_right"
        android:background="@drawable/ic_help"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingLeft="@dimen/actionbar_iv_back_padding_left"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/actionbar_iv_back_padding_top" />

    <TextView
        android:id="@+id/tvCoin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_tv_ruby_height"
        android:layout_marginLeft="@dimen/actionbar_iv_help_margin_left"
        android:layout_marginRight="@dimen/actionbar_iv_help_margin_right"
        android:background="@drawable/btn_coin"
        android:gravity="center"
        android:paddingLeft="@dimen/actionbar_tv_ruby_padding_left"
        android:paddingRight="@dimen/actionbar_tv_ruby_padding_right"
        android:textColor="#ff300000"
        android:textSize="16.0sp" />

</LinearLayout>