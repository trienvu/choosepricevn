<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:background="#8D8D8D"
                android:gravity="center|right"
                android:maxLength="24"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent" />

            <ImageButton
                android:id="@+id/imbDelete"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="#4D4D4D"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_num_delete_p1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#DEDEDE"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <Button
                    android:id="@+id/btnKey7"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_7" />

                <Button
                    android:id="@+id/btnKey8"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_8" />

                <Button
                    android:id="@+id/btnKey9"
                    style="@style/button_caculator"
                    android:text="@string/key_9" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnKey4"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_4" />

                <Button
                    android:id="@+id/btnKey5"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_5" />

                <Button
                    android:id="@+id/btnKey6"
                    style="@style/button_caculator"
                    android:text="@string/key_6" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnKey1"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_1" />

                <Button
                    android:id="@+id/btnKey2"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_2" />

                <Button
                    android:id="@+id/btnKey3"
                    style="@style/button_caculator"
                    android:text="@string/key_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <Button
                    android:id="@+id/btnKey0"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_0" />

                <Button
                    android:id="@+id/btnComma"
                    style="@style/button_caculator"
                    android:layout_marginRight="@dimen/dialog_key_margin_right"
                    android:text="@string/key_comma" />

                <Button
                    android:id="@+id/btnClear"
                    style="@style/button_caculator"
                    android:text="@string/key_c" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_input"
                android:text="@string/dialog_input_ok"
                android:textColor="@android:color/black"
                android:textSize="@dimen/tv_size_18" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_input"
                android:text="@string/dialog_input_cancel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/tv_size_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>