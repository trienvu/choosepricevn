<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:background="@android:color/black"
            android:gravity="center|right"
            android:maxLength="24"
            android:padding="2dp"
            android:singleLine="true"
            android:text="690,000"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imbDelete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_backspace_bg"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnKey7"
            style="@style/button_caculator"
            android:text="@string/key_7" />

        <Button
            android:id="@+id/btnKey8"
            style="@style/button_caculator"
            android:text="@string/key_8" />

        <Button
            android:id="@+id/btnKey9"
            style="@style/button_caculator"
            android:text="@string/key_9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnKey4"
            style="@style/button_caculator"
            android:text="@string/key_4" />

        <Button
            android:id="@+id/btnKey5"
            style="@style/button_caculator"
            android:text="@string/key_5" />

        <Button
            android:id="@+id/btnKey6"
            style="@style/button_caculator"
            android:text="@string/key_6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnKey1"
            style="@style/button_caculator"
            android:text="@string/key_1" />

        <Button
            android:id="@+id/btnKey2"
            style="@style/button_caculator"
            android:text="@string/key_2" />

        <Button
            android:id="@+id/btnKey3"
            style="@style/button_caculator"
            android:text="@string/key_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnKey0"
            style="@style/button_caculator"
            android:text="@string/key_0" />

        <Button
            android:id="@+id/btnComma"
            style="@style/button_caculator"
            android:text="@string/key_comma" />

        <Button
            android:id="@+id/btnClear"
            style="@style/button_caculator"
            android:text="@string/key_c" />
    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_gray_bg"
        android:text="Close" />

</LinearLayout>